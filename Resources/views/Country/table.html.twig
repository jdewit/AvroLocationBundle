<table class="table-condensed table-bordered table-striped">
    <thead>
        <tr>
            <th>{{ paginator.link('name') | raw }}</th>
            <th style="width: 190px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for country in countrys %}
            <tr>
                <td>{{ country.name }}</td>
                <td class="center-align">
                    <div class="btn-group" style="display: inline-block;">
                        <a class="btn btn-primary get-modal" href="{{ path('avro_user_country_edit',{'id': country.id}) }}"><i class="icon-pencil icon-white"></i> Edit</a>
                        <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
                        <ul class="dropdown-menu pull-right">
                            <li><a class="get-modal" href="{{ path('avro_user_country_edit',{'id': country.id}) }}"><i class="icon-pencil"></i> Edit</a></li>
                            {% if country.isDeleted %}
                            <li><a href="{{ path('avro_user_country_restore',{'id': country.id}) }}"><i class="icon-refresh"></i> Restore</a></li>

                            {% else %}
                            <li><a href="{{ path('avro_user_country_delete',{'id': country.id}) }}"><i class="icon-remove"></i> Delete</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="0" class="left-align">0 Countrys Found</td>
            </tr>
         {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="100%" class="center-align">
                {{ paginator.render | raw }}
            </td>
        </tr>
    </tfoot>
</table>
