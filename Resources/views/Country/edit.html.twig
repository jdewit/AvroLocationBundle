<form id="editFormModal" class="horizontal-form modal hide" action="{{ formAction }}" data-backdrop="true" method="POST">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Edit Country</h3>
    </div>
    <div class="modal-body">
        {% include 'AvroLocationBundle:Country:form.html.twig' %}
    </div>
    <div class="modal-footer">
        <button href="#" class="btn btn-primary btn-large" type="submit"><i class="icon-ok icon-white"></i> Update Country</button>
        <a href="#" class="btn close-modal" data-dismiss="modal"><i class="icon-remove"></i>Close</a>
        {% if country.isDeleted %}
            <a class="btn confirm btn-success" href="{{ path('avro_user_country_restore', { 'id': country.id }) }}" title="Are you sure you want to restore this Country?"><i class="icon-refresh icon-white"></i>Restore</a>
        {% else %}
            <a class="btn confirm btn-danger" href="{{ path('avro_user_country_delete', { 'id': country.id }) }}" title="Are you sure you want to delete this Country?"><i class="icon-trash icon-white"></i>Delete</a>
        {% endif %}
    </div>
</form>
