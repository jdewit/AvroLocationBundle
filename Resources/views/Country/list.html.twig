{% extends 'AvroLocationBundle::layout.html.twig' %}
{% block content %}
    <div class="page-header">
        <h1>
            Country List
            <a href="#countryForm" class="btn btn-success btn-large pull-right" data-toggle="modal"><i class="icon-plus icon-white"></i> New Country</a>
        </h1>
    </div>
    {% include 'AvroLocationBundle:Country:table.html.twig' %}
    {% if country.id %}
        {% include 'AvroLocationBundle:Country:edit.html.twig' %}
    {% else %}
        {% include 'AvroLocationBundle:Country:new.html.twig' %}
    {% endif %}
{% endblock %}
{% block js %}
{% if app.request.method == 'POST' %}
    $('#cityForm').modal('show');
{% endif %}
{% endblock %}
